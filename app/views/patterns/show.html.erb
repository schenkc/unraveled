
<section class="pattern-photos">
  <% @pattern.pictures.each do |picture| %>
    <img src="<%= picture.image.url(:thumb) %>">
  <% end %>

</section>

<h1><%= @pattern.name %></h1>

<section class="pattern-info-table">
    <table>
      <tbody>
      <tr>
        <td>Designer</td>
        <td>
          <%= @pattern.designer.show_name %>
        </td>
      </tr>
      <tr>
        <td>Category</td>
        <td>
          <%= @pattern.category %>
        </td>
      </tr>
      <tr>
        <td>Yarn</td>
        <td>
          <%= @pattern.yarn_name %>
        </td>
      </tr>
      <tr>
        <td>Weight</td>
        <td>
          <%= @pattern.yarn_weight %>
        </td>
      </tr>
      <tr>
        <td>Amount</td>
        <td>
          <%= @pattern.amount_yarn %>
        </td>
      </tr>
      <tr>
        <td>Sizes</td>
        <td>
          <%= @pattern.sizes %>
        </td>
      </tr>
      <tr>
        <td>Price</td>
        <td>
          <%= @pattern.price %>
        </td>
      </tr>
      <tr>
        <td>pdf for download?</td>
        <td>
          <%= @pattern.instruction ? "yes" : "no" %>
        </td>
      </tr>
      <tr>
        <td>link</td>
        <td>
          <a href="<%= @pattern.url %>"><%= @pattern.url %></a>
        </td>
      </tr>
    </tbody>
  </table>

  <section class="pattern-info">
    <p>
      Guage: <%= @pattern.stitch_col %> stitches and <%= @pattern.stitch_row %> rows
      for a <%= @pattern.swatch %> inch swatch in <%= @pattern.swatch_stitch %> on
      <%= @pattern.needles %>
    </p>
    <p><%= @pattern.notes %></p>
  </section>

  <section class="tags">
    Tags:
    <% @pattern.tags.each do |tag| %>
      <a class="search-tags" href="<%= search_url + '?query=' + tag.name %>"><%= tag.name %></a>
    <% end %>
  </section>

</section>

<section class="pattern-actions">
  <% if current_user.id == @pattern.designer_id %>
    <a href="<%= edit_pattern_url %>">Edit this pattern</a>

    <form action="<%= pattern_url %>" method="post">
        <input type="hidden" name="_method" value="delete">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input type="submit" value="Forget this pattern">
    </form>
  <% elsif !@pattern.fans.include?(current_user) %>

    <form action="<%= pattern_user_liked_patterns_url(@pattern) %>" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input type="submit" value="Add to Library">
    </form>
  <% end %>
</section>
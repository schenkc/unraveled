<h1>Messages</h1>
<a href="<%= new_message_url %>">Send a message</a>

<article class="sent-messages">
  <h2>Sent Messages</h2>
  <ul>
    <% @sent_messages.try(:each) do |message| %>
      <li>
        <ul class="message-content">
          <li>Message to <%= message.receiver.show_name %> sent at <%= message.created_at %> has<%= message.is_seen? ? "" : " not"%> been seen.
          </li>
          <li class="message-body">
            <%= message.body %>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
</article>

<article class="received-messages">
  <h2>Received Messages</h2>
    <table>
      <tbody>
      <tr>
        <td>Sender</td>
        <td>Message</td>
        <td>Sent At</td>
      </tr>
    <% @received_messages.try(:each) do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><a href="/messages/<%= message.id %>/threads"><%= message.body%></a></td>
        <td><%= message.created_at %>
      </tr>
    <% end %>
    </tbody>
  </table>
</article>